<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
<div class="container">
<div class="row">

<div class="input-field col s6">
    <form action="/todo" method="post">
    <input placeholder="change air filter" id="task" name="task" type="text" class="validate">
    <label for="task">Task</label>
        <div class="col s6">
        <button class="btn waves-effect waves-light" type="submit" name="action">
            add
        </button>
        </div>
    </form>
</div>
</div>
</div>

<div class="todos container">
    <div class="row">
        <div class="col s6">
            <table>
                <thead>
                <tr>
                    <th>Task</th>
                    <th> </th>
                </tr>
                </thead>
                <tbody>

            <% todos.forEach(function(todo){ %>
            <tr>
                    <td> <%= todo.task %> </td>
                    <td>
                        <button class="btn  right waves-effect waves-light delete_task" type="submit" name="action" data-id="<%= todo._id %>">
                            Completed
                        </button>
                    </td>

            </tr>
            <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>




</body>
<script type="text/javascript" src="/javascripts/jq_starts.js"></script>
</html>
